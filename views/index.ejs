<%- include('./partials/header.ejs') -%>

<body>
<!-- Begin Nav
================================================== -->

	<%- include('./partials/navbar.ejs') -%>
	
<!-- End Nav
================================================== -->


<div class="container">

	<!-- Begin Featured
	================================================== -->
	<section class="featured-posts">
	<div class="section-title">
		<h2><span>All Articles</span></h2>
	</div>
	<div class="card-columns listfeaturedtag" style="height: 100%; margin-bottom: 200px;">
		<!-- begin post -->
		<% postList.forEach(element => { %> 
		<div class="card">
			<div class="row">
				<div class="col-md-5 wrapthumbnail">
					<a href="post">
						<div class="thumbnail" style="background-image:url(assets/img/demopic/<%= element.image %>);">
						</div>
					</a>
				</div>
				<div class="col-md-7">
					<div class="card-block">
						<h2 class="card-title"><a href="post"><%= element.title %> </a></h2>
						<h4 class="card-text"><%= element.article %> </h4>
						<div class="metafooter">
							<div class="wrapfooter">
								<span class="meta-footer-thumb">
								<a href=""><img class="author-thumb" src="https://www.gravatar.com/avatar/e56154546cf4be74e393c62d1ae9f9d4?s=250&amp;d=mm&amp;r=x" alt="Sai"></a>
								</span>
								<span class="author-meta">
								<span class="post-name"><a href=""> Steve</a></span><br/>
								<span class="post-date">22 July 2022</span><span style='margin-right:10em'></span> 
								</span>
								<span class="post-read-more"><a href="post" title="Read Story"><i class="fa fa-angle-double-right fa-2x"></i></a></span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% }); %> 
		<!-- end post -->

	</div>
	</section>
	<!-- End Featured
	================================================== -->


	<!-- Begin Footer
	================================================== -->

		<%- include('./partials/footer.ejs') -%>

	<!-- End Footer
	================================================== -->

</div>
<!-- /.container -->

<!-- Bootstrap core JavaScript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="assets/js/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script src="assets/js/ie10-viewport-bug-workaround.js"></script>
</body>
</html>
