<div class="container">
		<section  style="background-color: white; margin-top:-50px;">
			<div class="container py-5 h-100">
			  <div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-12 col-md-8 col-md-6 col-xl-5">
				  <div class="card shadow-2-strong" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">
						<form action="register" method="POST">

							<h3 class="mb-5"><i class="fa fa-users"></i> Create New Account</h3>
							<div class="form-outline mb-4">
								<input type="text" id="firstName" name="firstName"class="form-control form-control-md" placeholder="First Name"/>
							</div>

							<div class="form-outline mb-4">
								<input type="text" id="lastName" name="lastName" class="form-control form-control-md" placeholder="Last name"/>
							</div>

							<div class="form-outline mb-4">
								<input type="email" id="email" name="email" class="form-control form-control-md" placeholder="Email"/>
							</div>

							<div class="form-outline mb-4">
								<select id="gender" class="form-control form-control-md" Placeholder="Choose Gender" name="gender">
									<option value="" disabled selected>Gender</option>
									<option value="Male">Male</option>
									<option value="Female">Female</option>
									<option value="Other">Other</option>
								</select>
							</div>
				
							<div class="form-outline mb-4">
								<input type="password" name="password" class="form-control form-control-md" placeholder="Password" />
							</div>
							
						
							<div class="form-check d-flex justify-content-start mb-4">
								
							<p>Already have an Account? <a href="login">Sign in</a></p>
							</div>
				
							<button class="btn btn-primary btn-lg btn-block" style="background-color: black; border: black" type="submit">Register</button>
						</form>
					</div>
				  </div>
				</div>
			  </div>
			</div>
		  </section>

<!-- End Register form
